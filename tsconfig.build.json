{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": [
		"src/**/__tests__/*",
		"src/**/*.test.tsx",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.spec.ts",
		"src/**/*.stories.tsx",
		"src/**/*.stories.ts",
		"src/test/**/*",
		"examples/**/*"
	]
}
