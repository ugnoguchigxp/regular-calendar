{
  "include": ["src/**/*.{ts,tsx}"],
  "exclude": [
    "coverage/**",
    "dist/**",
    "**/[.]**",
    "packages/*/test?(s)/**",
    "**/*.d.ts",
    "**/virtual:*",
    "**/__x00__*",
    "**/\x00*",
    "cypress/**",
    "test?(s)/**",
    "test?(-*).?(c|m)[jt]s?(x)",
    "**/*{.,-}{test,spec}.?(c|m)[jt]s?(x)",
    "**/__tests__/**",
    "**/{karma,rollup,webpack,vite,vitest,jest,avajs,babel,nyc,cypress,tsup,build}.config.*",
    "**/vitest.{workspace,projects}.[jt]s?(x)",
    "**/.{eslint,mocha,prettier}rc.{?(c|m)js,yml}",
    "node_modules/**",
    "src/test/**",
    "examples/**"
  ],
  "reporter": ["text", "json", "html"],
  "all": true
}
